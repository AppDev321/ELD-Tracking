<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlertDialogBaseTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/alert_dialog_bg</item>
        <item name="colorAccent">@color/dialog_box_text_and_control_color</item>
        <item name="android:colorAccent">@color/dialog_box_text_and_control_color</item>
        <item name="android:textColor">@color/dialog_box_text_and_control_color</item>
        <item name="android:textColorPrimary">@color/dialog_box_text_and_control_color</item>
        <item name="android:textColorAlertDialogListItem">@color/dialog_box_text_and_control_color
        </item>
        <item name="android:colorControlNormal">@color/dialog_box_text_and_control_color</item>
        <item name="android:colorControlActivated">@color/dialog_box_text_and_control_color</item>
        <item name="android:minWidth">100dp</item>
        <item name="colorControlNormal">@color/dialog_box_text_and_control_color</item>
        <item name="colorControlActivated">@color/dialog_box_text_and_control_color</item>
        <item name="textColorAlertDialogListItem">@color/dialog_box_text_and_control_color</item>
        <item name="buttonBarNegativeButtonStyle">@style/PositiveNegativeButtons</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveNegativeButtons</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="RadioButtonsTheme" parent="AlertDialogBaseTheme" />

    <style name="styleMultiChoiceDialog" parent="AlertDialogBaseTheme" />

    <style name="PositiveNegativeButtons" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialog_box_text_and_control_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="TextFontMedium" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="TextFontRegular" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="TextFontLight" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="android:fontFamily">@font/light</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="TextFontSemiBold" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="TextFontBold" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="defaultPrimaryButton" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="android:background">@drawable/default_primary_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:layout_width">@dimen/_200sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
    </style>


    <style name="defaultSecondaryButton" parent="defaultPrimaryButton">
        <item name="android:background">@drawable/default_secondary_button</item>
    </style>

    <style name="labelDashboard">
        <item name="android:layout_width">@dimen/_120sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:drawablePadding">@dimen/_20sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">@dimen/_10sdp</item>
        <item name="android:paddingVertical">@dimen/_8sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/ic_slight_round_corner_rectangle</item>
    </style>

    <style name="progressDashboard">
        <item name="android:layout_width">@dimen/_80sdp</item>
        <item name="android:layout_height">@dimen/_80sdp</item>
        <item name="barWidth">10dp</item>
        <item name="countTextColor">@color/black</item>
        <item name="countTextSize">20sp</item>
        <item name="defTextSize">10sp</item>
        <item name="defTextColor">@color/black</item>
        <item name="marginBtwText">12dp</item>
        <item name="progressColor">#17BEE2</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
    </style>
</resources>