<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:text="Select your Co-driver"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_30sdp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/edCoDriverName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_29sdp"
        android:hint="Select Driver"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawableEnd="@drawable/ic_down_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView3" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="#DADADA"
        app:layout_constraintEnd_toEndOf="@+id/edCoDriverName"
        app:layout_constraintStart_toStartOf="@+id/edCoDriverName"
        app:layout_constraintTop_toBottomOf="@+id/edCoDriverName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:text="You will become co-driver. Your co-driver will stay driver"
        app:layout_constraintEnd_toEndOf="@+id/edCoDriverName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/defaultPrimaryButton"
        android:text="Switch Driver"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="@+id/appCompatTextView14"
        app:layout_constraintStart_toStartOf="@+id/appCompatTextView14"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView14" />


</androidx.constraintlayout.widget.ConstraintLayout>